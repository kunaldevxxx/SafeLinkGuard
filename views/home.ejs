    cursor: pointer;
    background-image: radial-gradient(circle, rgba(255,255,255,0) 0%, rgba(255,255,255,0) 20%, rgba(255,255,255,0.8) 20%, rgba(255,255,255,0.8) 100%);
} */

    </style>

</head>

<body>
    <div class="container">
        <div class="name">SafeLinkGuard</div>
     
        <div>
            <form method="POST" action="/url">
                <label for="redirectURL">Enter Your Original URL</label>
                <input type="text" id="url" name="url" placeholder="https://example.com">
                <button type="submit">Generate</button>
            </form>
        </div>
        <% if (locals.id) { %>
            <div class="generated-url">
                <p>URL Generated: http://localhost:8001/url/<%= id %></p>
            </div>
         
        <% } %>
        <% if (locals.urls) { %>
            <table>
                <thead>
                    <tr>
                        <th>Sr. No.</th>
                        <th>Short ID</th>
                        <th>Redirect URL</th>
                        <th>Clicks</th>
                    </tr>
                </thead>
                <tbody>
                    <% urls.forEach((url, index) => { %>
                    <tr>
                        <td><%= index + 1 %></td>
                        <td><%= url.shortId %></td>
                        <td><%= url.redirectURL %></td>
                        <td><%= url.visitHistory.length %></td>
                    </tr>
                    <% }) %>
                </tbody>
            </table>
            <% } %>
    </div>
</body>

</html>